// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id String @id @default(cuid())
  firstName String
  lastName String
  name String
  username String
  Posts Post[]
}

model Post {
  id Int @id
  userid String
  title String
  date String
  content String
  user User @relation(fields: [userid], references: [id])
}

